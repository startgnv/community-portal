{
  "name": "community-portal-next-js",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "next",
    "next": "next start",
    "dev": "next dev",
    "serve": "npm run getConfig && firebase serve",
    "lint": "next lint",
    "getConfig": "firebase apps:sdkconfig web --json > ./firebase-config.json",
    "build-all": "npm run build-next && npm run build-firebase",
    "build-firebase": " cd \"functions\" && npm install && npm run build",
    "build-next": "next build",
    "deploy": "firebase use default && npm run getConfig && npm run build-next && firebase deploy --only hosting:default && firebase deploy --only functions:nextjs-server",
    "deploy-dev": "firebase use dev && npm run getConfig && npm run build-next && firebase deploy --only hosting:dev && firebase deploy --only functions:dev"
  },
  "devDependencies": {
    "babel-plugin-styled-components": "^2.0.7",
    "cypress": "^4.12.1",
    "cypress-firebase": "^1.4.3",
    "env-cmd": "^10.1.0",
    "firebase-tools": "^11.6.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^3.9.7"
  },
  "dependencies": {
    "@date-io/date-fns": "^1.3.13",
    "@material-ui/core": "^4.9.7",
    "@material-ui/icons": "^4.0.0",
    "@material-ui/lab": "^4.0.0-alpha.46",
    "@material-ui/pickers": "^3.2.10",
    "@rehooks/window-size": "^1.0.2",
    "@sendgrid/mail": "^6.5.5",
    "@tryghost/content-api": "^1.5.10",
    "antd": "^4.2.3",
    "babel-plugin-macros": "^3.1.0",
    "classnames": "^2.2.6",
    "d3-ease": "^1.0.5",
    "date-fns": "^2.14.0",
    "draft-js": "^0.11.7",
    "draftjs-to-html": "^0.8.4",
    "email-validator": "^2.0.4",
    "firebase": "^8.10.0",
    "firebase-admin": "^9.11.1",
    "firebase-functions": "^3.15.4",
    "html-to-draftjs": "^1.4.0",
    "html-to-react": "^1.4.2",
    "husky": "^1.3.1",
    "immutable": "^4.0.0-rc.14",
    "lint-staged": "^8.1.5",
    "moment": "^2.24.0",
    "next": "11.1.0",
    "polished": "^3.4.1",
    "popper": "^1.0.1",
    "prettier": "^1.16.4",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-draft-wysiwyg": "^1.14.7",
    "react-firebase-hooks": "^3.0.4",
    "react-ga": "^3.3.0",
    "react-helmet": "^5.2.1",
    "react-map-gl": "^4.1.1",
    "react-scripts": "3.0.1",
    "react-select": "^3.0.4",
    "string-similarity": "^4.0.1",
    "styled-components": "^4.1.3"
  },
  "lint-staged": {
    "src/**/*.{js,json}": [
      "prettier --write",
      "git add"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "prettier": {
    "singleQuote": true
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "engines": {
    "node": "16"
  },
  "main": "server.js"
}
